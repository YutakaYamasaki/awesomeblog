<% @user ||= current_user %>

<div class="stats">
	<%= link_to following_user_path(@user) do %>
	<strong class="stat">
		<%= current_user.following.count %>
	</strong>
	following
	<% end %>

	<%= link_to followers_user_path(@user) do %>
	<strong class="stat">
		<%= current_user.followers.count %>
	</strong>
	followed
	<% end %>


</div>